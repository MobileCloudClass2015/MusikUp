<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#288cff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_alignParentBottom="true">

            <Button
                android:background="#ffffff"
                android:textColor="#288cff"
                android:textSize="30dp"
                android:text="Sign in"
                android:id="@+id/registrationBtn"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="400dp"/>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textColor="#ffffff"
        android:text="Musikup"
        android:textSize="70dp"
        android:id="@+id/smart"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/LoginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:background="#ffffff"
            android:text="Login"
            android:textColor="#288cff"
            android:textSize="20dp"
            android:id="@+id/loginBtn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/idEntry"
            android:layout_toEndOf="@+id/idEntry"
            android:layout_marginLeft="5dp" />

        <TextView
            android:textColor="#ffffff"
            android:text=" ID"
            android:textSize="30dp"
            android:id="@+id/userIDLabel"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/loginBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:background="#ffffff"
            android:id="@+id/idEntry"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/pwdLabel"
            android:layout_toRightOf="@+id/userIDLabel"
            android:layout_toEndOf="@+id/userIDLabel" />

        <TextView
            android:textColor="#ffffff"
            android:text="PW"
            android:textSize="30dp"
            android:id="@+id/pwdLabel"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_below="@id/userIDLabel"
            android:layout_marginTop="10dp"/>

        <EditText
            android:background="#ffffff"
            android:id="@+id/pwdEntry"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:inputType="textPassword"
            android:layout_alignBottom="@+id/pwdLabel"
            android:layout_toLeftOf="@+id/loginBtn"
            android:layout_toStartOf="@+id/loginBtn" />


    </RelativeLayout>

</RelativeLayout>
